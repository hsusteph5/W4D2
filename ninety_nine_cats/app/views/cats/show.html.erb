<h1>SHOW ME MY CATS</h1>

<table>
    <thead>
        <tr>
            <th colspan="3"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @cat.birth_date %></td>
            <td><%= @cat.color %></td>
            <td><%= @cat.age %></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"><%= @cat.description %></td>
        </tr>
    </tfoot>
</table>

